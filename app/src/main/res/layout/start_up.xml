<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".StartUpActivity">

	<RelativeLayout android:id="@+id/start_up"
		android:layout_width="match_parent"
		android:layout_height="match_parent" >

		<RelativeLayout android:id="@+id/content_container" 
			android:layout_width="match_parent"
			android:layout_height="match_parent" >

			<RelativeLayout android:id="@+id/group_5"
				android:layout_centerInParent="true"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				>

				<ImageView
					android:id="@+id/startup_bg"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:scaleType="fitXY"
					android:layout_centerInParent="true"
					android:src="@drawable/startup_background" />

				<View   android:id="@+id/rectangle_12"
					android:background="@drawable/rectangle_12_shape"
					android:layout_alignParentBottom="true"
					android:layout_width="414dp"
					android:layout_height="780dp" />

			</RelativeLayout>

			<ImageView android:id="@+id/log_in_button"
				android:src="@drawable/log_in_button"
				android:contentDescription="log_in_button"
				android:layout_centerHorizontal="true"
				android:layout_above="@id/sign_up_button"
				android:layout_marginBottom="10dp"
				android:layout_width="302.63dp"
				android:layout_height="42.52dp"
				android:onClick="toLoginActivity"/>

			<ImageView android:id="@+id/sign_up_button"
				android:src="@drawable/sign_up_button"
				android:contentDescription="sign_up_button"
				android:layout_centerHorizontal="true"
				android:layout_alignParentBottom="true"
				android:layout_marginBottom="90dp"
				android:layout_width="302.63dp"
				android:layout_height="42.52dp"
				android:onClick="toSignUpActivity"/>

			<TextView android:id="@+id/cooking_delicious_food_easily"
				android:textStyle="bold"
				android:textSize="32sp"
				android:textColor="@color/cooking_delicious_food_easily_color"
				android:layout_centerHorizontal="true"
				android:layout_above="@id/say_goodbye_to_mealtime_monotony_and_hello_to_exciting_new_tastes_"
				android:layout_marginBottom="10dp"
				android:layout_width="285dp"
				android:layout_height="wrap_content"
				android:text="@string/cooking_delicious_food_easily_string"
				 />

			<TextView android:id="@+id/say_goodbye_to_mealtime_monotony_and_hello_to_exciting_new_tastes_"
				android:textColor="@color/shape_color"
				android:layout_centerHorizontal="true"
				android:layout_above="@id/log_in_button"
				android:layout_marginBottom="50dp"
				android:layout_width="285dp"
				android:layout_height="wrap_content"
				android:text="@string/say_goodbye_to_mealtime_monotony_and_hello_to_exciting_new_tastes__string"
				 />
		</RelativeLayout>
	</RelativeLayout>
</RelativeLayout>