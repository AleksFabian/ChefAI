<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout android:id="@+id/profile_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout android:id="@+id/pp"
                android:layout_marginTop="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                >

                <View   android:id="@+id/ellipse_6"
                    android:background="@drawable/ellipse_6_shape"
                    android:layout_width="107dp"
                    android:layout_height="107dp" />

                <ImageView android:id="@+id/profile_pic"
                    android:src="@drawable/group_8"

                    android:layout_centerInParent="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

            </RelativeLayout>

            <TextView android:id="@+id/username"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/pp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView android:id="@+id/email"
                android:textSize="11sp"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


            <RelativeLayout android:id="@+id/settings"
                android:layout_below="@+id/email"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <View   android:id="@+id/rectangle_32"
                    android:background="@drawable/rectangle_32_shape"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="61dp"
                    android:layout_height="61dp" />

                <ImageView android:id="@+id/vector"
                    android:src="@drawable/vector"
                    android:contentDescription="vector"
                    android:layout_marginStart="294dp"
                    android:layout_marginTop="25dp"
                    android:layout_width="8.27dp"
                    android:layout_height="14dp" />

                <TextView android:id="@+id/settings_text"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/settings_color"
                    android:layout_marginLeft="97dp"
                    android:layout_marginTop="21dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_string"
                    android:layout_centerInParent="true"
                    />

                <ImageView android:id="@+id/settings_ek1"
                    android:src="@drawable/settings_ek1"
                    android:contentDescription="settings_ek1"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="18dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
            </RelativeLayout>

            <View   android:id="@+id/line_14"
                android:background="@drawable/line_14_shape"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_below="@id/settings"
                android:layout_width="315dp"
                android:layout_height="1dp" />


            <RelativeLayout android:id="@+id/log_out_button"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="80dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/log_out"
                    android:layout_width="192dp"
                    android:layout_height="44dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/rectangle_33_shape"
                    android:gravity="center"
                    android:text="@string/log_out_string"
                    android:textColor="@color/log_out_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>