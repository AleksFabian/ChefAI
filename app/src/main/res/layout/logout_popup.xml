<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000">
        <RelativeLayout android:id="@+id/log_out_pop_up"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:background="@drawable/pop_bg"
            android:layout_centerInParent="true"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/are_you_sure_you_wanna_log_out_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:paddingHorizontal="40dp"
                android:text="Are you sure you want to log out?"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


            <RelativeLayout android:id="@+id/buttons"
                android:layout_below="@id/are_you_sure_you_wanna_log_out_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                >

                <TextView android:id="@+id/yes_btn"
                    android:textStyle="bold"
                    android:background="@drawable/pop_bg"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:text="Yes"
                    android:layout_marginStart="90dp"
                    />

                <TextView android:id="@+id/no_btn"
                    android:background="@drawable/no_bg"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:text="No"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>;
</RelativeLayout>