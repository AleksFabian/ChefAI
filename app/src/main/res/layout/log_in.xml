<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#FFFFFF"
	tools:context=".LogInActivity">

	<RelativeLayout android:id="@+id/login"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/background_gradient"
		 >

		<RelativeLayout android:id="@+id/content_container"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_margin="5dp">

			<ImageView android:id="@+id/union"
				android:src="@drawable/vector_back"
				android:layout_marginTop="54dp"
				android:layout_marginStart="30dp"
				android:layout_width="24.46dp"
				android:layout_height="23.61dp"
				android:onClick="finishActivity"
				/>

			<TextView android:id="@+id/log_in_ek1"
				android:textStyle="bold"
				android:textSize="40sp"
				android:textColor="@color/black"
				android:shadowRadius="1"
				android:shadowColor="#80000000"
				android:shadowDx="-5"
				android:shadowDy="-3"
				android:layout_alignStart="@id/login_text_edit"
				android:layout_above="@id/login_text_edit"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/log_in_ek1_string"
				android:layout_marginBottom="12dp"
				/>

			<RelativeLayout android:id="@+id/login_text_edit"
				android:layout_centerInParent="true"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="12dp"
				>
				<RelativeLayout android:id="@+id/email"
					android:layout_marginBottom="8dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:background="@drawable/start_up_input_shape"
					>

					<EditText   android:id="@+id/login_email_et"
						android:inputType="textEmailAddress"
						android:background="@color/transparent"
						android:layout_width="290dp"
						android:layout_height="41dp"
						android:hint="Email"
						android:paddingStart="10dp"/>

				</RelativeLayout>


				<RelativeLayout android:id="@+id/password"
					android:layout_below="@id/email"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:background="@drawable/start_up_input_shape"
					>

					<EditText   android:id="@+id/login_password_et"
						android:inputType="textPassword"
						android:background="@color/transparent"
						android:layout_width="290dp"
						android:layout_height="41dp"
						android:hint="Password"
						android:paddingStart="10dp"/>
				</RelativeLayout>
			</RelativeLayout>

			<ImageView android:id="@+id/log_in_button"
				android:src="@drawable/log_in_button"
				android:contentDescription="login_button"
				android:layout_centerHorizontal="true"
				android:layout_below="@id/login_text_edit"
				android:layout_width="wrap_content"
				android:layout_height="39dp"
				android:onClick="toHomeScreen"/>
		</RelativeLayout>
	</RelativeLayout>
</RelativeLayout>